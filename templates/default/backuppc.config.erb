#
#   See http://backuppc.sourceforge.net.
#
#========================================================================

<% node['backuppc']['conf'].each do |key, value| -%>
$Conf{<%= key %>} = <%=
  if value.kind_of?(Array)
    value
  elsif value.kind_of?(String) && value[0] == '[' && value[-1] == ']'
    value
  elsif value.kind_of?(String) && value[0] == '{' && value[-1] == '}'
    value
  elsif value == 'undef'
    value
  elsif value.kind_of?(String)
    "'#{value}'"
  else
    value
  end
-%>;
<% end -%>
